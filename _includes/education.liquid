<div class="education">
  {% if site.education != blank %}
    {% assign education_size = site.education | size %}
    <div
      class="table-responsive"
      {% if include.limit and page.education.scrollable and education_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign education = site.education | reverse %}
        {% if include.limit and page.education.limit %}
          {% assign education_limit = page.education.limit %}
        {% else %}
          {% assign education_limit = education_size %}
        {% endif %}
        {% for item in education limit: education_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.start_end }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="education-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No education so far...</p>
  {% endif %}
</div>
